@model Classroom.Models.Catalog.Classes.ClassViewModel

@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mt-4">Xóa người dùng</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="/User/">Người dùng</a></li>
    <li class="breadcrumb-item active">Xóa người dùng</li>
</ol>
<div class="card mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Bạn có chắc chắn muốn xoá người dùng này không?</h6>
    </div>
    <div class="card-header">
        <a class="btn btn-success" asp-action="Index" asp-controller="User">Về danh sách</a>
    </div>

    <div class="card-body">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ClassID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ClassID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ClassName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ClassName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Topic)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Topic)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.isPublic)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.isPublic)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input asp-for="ID" type="hidden" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>