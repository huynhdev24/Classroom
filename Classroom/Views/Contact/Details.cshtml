<h1 class="mt-4">Thông tin phản hồi người dùng</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="Contact" asp-action="Index">Phản hồi</a></li>
    <li class="breadcrumb-item active">Thông tin</li>
</ol>
<div class="col-sm-12 col-md-6 my-3">
    <div class="row">
        @if (ViewBag.SuccessMsg != null)
        {
            <div id="msgAlert" class="alert alert-success" role="alert">
                @ViewBag.SuccessMsg
            </div>
        }
    </div>
</div>
<div class="card mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chi tiết phản hồi</h6>
    </div>

    <div class="card-body">
        <dl class="row">
            <div class="col-sm-12">
                <h4 class="text-info">Thông tin phản hồi người dùng</h4>
                <dt class="mb-2">
                    Tên người dùng: @Html.DisplayFor(model => model.CustomerName)
                </dt>
                <dt class="mb-2">
                    Địa chỉ email: @Html.DisplayFor(model => model.Email)
                </dt>
                <dt class="mb-2">
                    Số điện thoại: @Html.DisplayFor(model => model.PhoneNumber)
                </dt>
                <dt class="mb-2">
                    Thời gian: @Html.DisplayFor(model => model.DateTimeCreated)
                </dt>
                <style>
                    img {
                        max-width: 100%;
                    }
                </style>
                <dt class="mb-2">
                    Nội dung: @Html.Raw(Model.Message)
                </dt>
                @if (!string.IsNullOrEmpty(Model.Email) == true)
                {
                    <form asp-controller="Contact" asp-action="Send">
                        <textarea id="editor" name=message class="form-control" placeholder="Nhập nội dung..."></textarea>
                        <input hidden name="ContactID" type="text" value="@Model.ContactID">
                        <input hidden name="Email" type="text" value="@Model.Email">
                        <button type="submit" class="btn btn-primary mt-2">Gửi email phản hồi</button>
                            <a class="btn btn-danger mt-2" data-bs-toggle="modal" data-bs-target="#delete" href="">Xoá phản hồi</a>
                    </form>
                }
                
                <!-- Modal -->
                <div class="modal fade" id="delete" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered animated--grow-in">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Xác nhận xoá phản hồi này</h1>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                <a type="button" asp-controller="Contact" asp-action="Delete"
                                    asp-route-id="@Model.ContactID" class="btn btn-danger">Xác nhận</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </dl>

    </div>
</div>