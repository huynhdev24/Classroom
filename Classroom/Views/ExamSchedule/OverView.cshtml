@{
    var returnUrl = Context.Request.Path + "?id=" + @Model.ExamScheduleID;
}


<div class="row">
    <!-- Area Chart -->
    <div class="">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.ExamScheduleName</h6>
                @if (Model.TeacherID == HttpContextAccessor.HttpContext.Session.GetString("UserId").ToString())
                {
                    <form asp-action="SendMail">
                        <input type="text" name="ClassID" value="@Model.ClassID" hidden>
                        <input type="text" name="ExamScheduleID" value="@Model.ExamScheduleID" hidden>
                        <button type="submit" class="btn btn-primary">Gửi email thông báo</button>
                    </form>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                        aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Tuỳ chọn:</div>
                            <a class="dropdown-item" asp-controller="ExamSchedule" asp-action="Edit"
                            asp-route-id="@Model.ExamScheduleID">Chỉnh sửa</a>
                            <a class="dropdown-item text-danger" asp-controller="ExamSchedule" asp-action="Delete"
                            asp-route-id="@Model.ExamScheduleID" asp-route-returnUrl="@returnUrl">Xoá kỳ thi</a>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body row">
                <div class="col-xl-4">
                    <h6 class="text-info">Lớp học</h6>
                    @Model.ClassName
                    <br /><br />
                    <h6 class="text-info">Ngày tạo</h6>
                    @Model.DateTimeCreated.ToString("HH:mm - dddd dd/MM/yyyy")
                    <br /><br />
                    <h6 class="text-info">Ngày thi</h6>
                    @Model.ExamDateTime.ToString("HH:mm - dddd dd/MM/yyyy")
                    <br /><br>
                    <h6 class="text-info">Hạn làm bài</h6>
                    @Model.Deadline.ToString("HH:mm - dddd dd/MM/yyyy")
                    <br /><br>
                    <h6 class="text-info">Thời gian làm bài</h6>
                    @Model.ExamTime phút
                    <br>
                    <br>
                    @if (ViewBag.myMark != null)
                    {
                        <h6 class="text-success">Điểm của bạn: @ViewBag.myMark</h6>
                    }
                    else
                    {
                        if (Convert.ToDateTime(Model.ExamDateTime) < DateTime.Now)
                        {
                            if (Convert.ToDateTime(Model.Deadline) > DateTime.Now)
                            {
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">Bắt đầu thi</button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger" disabled>Ngoài thời gian làm bài</button>
                            }
                        }
                        else
                        {
                            <button type="button" class="btn btn-info" disabled>Chưa đến thời gian thi</button>
                        }
                    }



                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="animated--grow-in modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Xác nhận vào thi</h1>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Đóng</button>
                                    <a asp-controller="Question" asp-action="Exam" asp-route-id="@Model.ExamScheduleID"
                                        class="btn btn-primary">Bắt đầu thi</a>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="col-xl-8">
                    <h6 class="text-info">Nội dung thi</h6>
                    @Html.Raw(Model.Description)
                </div>
            </div>


        </div>
    </div>
</div>